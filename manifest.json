{
    "manifest_version": 3,
    "name": "楽天証券からCSVダウンロードする拡張機能",
    "version": "1.0.0",
    "background": {
        "service_worker": "src/background/index.ts"
    },
    "action": {
        "default_popup": "src/popup/index.html"
    },
    "content_scripts": [
        {
            "js": [
                "src/content/index.tsx"
            ],
            "matches": [
                "https://*.rakuten-sec.co.jp/*"
            ]
        }
    ],
    "permissions": [
        "activeTab",
        "downloads"
    ],
    "host_permissions": [
        "https://*.rakuten-sec.co.jp/*"
    ]
}